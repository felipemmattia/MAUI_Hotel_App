<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Agradecimento"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray950}">

    <VerticalStackLayout VerticalOptions="CenterAndExpand">

        <Label Text="Obrigado por Utilizar nosso sistema"
           TextColor="{StaticResource Primary}"
           FontFamily="Kalam"
           FontSize="30"
           HorizontalTextAlignment="Center"/>
           <Label Text="Sua reserva foi finalizada com sucesso"
                FontSize="20"
                TextColor="{StaticResource Primary}"/>
        <Label Text="Esperamos vê-lo novamente em breve!"
           TextColor="{StaticResource Primary}"/>
        <Button Text="Voltar ao Início"
                Margin="5,10,5,5"
                FontFamily="Kalam"
                BackgroundColor="{StaticResource Primary}"
                Clicked="OnVoltarInicioClicked"/>
        <Button Text="Sobre-nós"
                FontFamily="Kalam"
                Margin="5,5,5,5"
                BackgroundColor="{StaticResource Primary}"
                Clicked="OnSobreClicked"/>
    </VerticalStackLayout>
</ContentPage>