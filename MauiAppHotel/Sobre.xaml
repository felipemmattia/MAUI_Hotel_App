<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Sobre"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray950}">

    <VerticalStackLayout VerticalOptions="CenterAndExpand">

        <Label Text="Sobre-nós"
           TextColor="{StaticResource Primary}"
           FontFamily="Kalam"
           FontSize="30"
           HorizontalTextAlignment="Center"/>
        <Label Text="Desenvolvido por: Felipe Moreira de Mattia"
           TextColor="{StaticResource Primary}"/>
        <Label Text="Ano de desenvolvimento: 2025"
            TextColor="{StaticResource Primary}"/>
        <Label Text="Versão 2.0"
           TextColor="{StaticResource Primary}"/>
        <Label Text="Contato: github.com/felipemmattia"
           TextColor="{StaticResource Primary}"/>
        <Button Text="Voltar ao Início"
           FontFamily="Kalam"
           Margin="5,10,5,5"
           BackgroundColor="{StaticResource Primary}"
           Clicked="OnVoltarInicioClicked"/>
    </VerticalStackLayout>
</ContentPage>